<body>
  <main class="container">
    <h1 class="title">Registrar</h1>
    <form action="/api/session/register" method="post" class="register-form">
      <label for="first_name">Nombre del usuario:</label><br />
      <input type="text" name="first_name" id="first_name" placeholder="Nombre" required /><br />
      <label for="last_name">Apellido:</label><br />
      <input type="text" name="last_name" id="last_name" placeholder="Apellido" required /><br />
      <label for="email">Correo electrónico:</label><br />
      <input type="email" name="email" id="email" placeholder="Correo electrónico" required /><br />
      <label for="age">Edad:</label><br />
      <input type="number" name="age" id="age" placeholder="Edad" min="0" required inputmode="numeric"/>
      <br />
      <label for="password">Contraseña:</label><br />
      <input type="password" name="password" id="password" placeholder="Contraseña" required />
      <br />
      <button type="submit">Registrar</button>
      <div class="register-link">
        <a href="/login">Iniciar Sesión</a>
      </div>
    </form>
  </main>
</body>